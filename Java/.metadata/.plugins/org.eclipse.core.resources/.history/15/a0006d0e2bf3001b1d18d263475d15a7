package Package0802;

import java.util.Scanner;

public class Example02_if {
	public static void main(String[] args) {
		
		int n = 498;
		//n의 값이 양수이면
		//if (n>0) System.out.println("n은 양수입니다.");
		
		//n의 값이 짝수이면
		//if (n%2==0) System.out.println("n은 짝수입니다.");
		
		//n의 값이 300 이상 500 미만 사이의 값이고 3의 배수이면 범위에 포함됩니다 출력
		if ((n>=300 && n<500) && (n%3==0)) System.out.println("범위에 포함됩니다.");
		
	
	}
}