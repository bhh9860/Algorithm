package Package0727;

public class File01_P {
	public static void main(String[] args) {
		// 리터럴 : 코드상에 직접적으로 표현 된 값
		// 정수리터럴, 10, 2, 8, 16진수
		// float 는 끝에 f를 붙임.
		System.out.println("10진수 : " + 1000);
		System.out.println("2진수 : " + 0b1000);
		System.out.println("8진수 : " + 01000);
		System.out.println("16진수 : " + 0x1000);
		
		// 문자 리터럴
		char a = 4816;
		System.out.println("a : " + a);
	}
}