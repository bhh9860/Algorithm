package Package0727;

public class File02_output {
	public static void main(String[] args) {
		// 출력(output)
		// 프로그램 내부에서 외부로(모니터, 파일 저장, 네트워크 상) 나가는 과정
		
		// 표준 출력 : System.out
		// 단축키 : sysout + 자동완성키
		// 기본 출력 메서드 : System.out.println() : 지정된 값을 한 줄에 출력, 커서는 다음 칸
		// System.out.print() : 지정된 값을 출력, 커서는 그대로
		// System.out.printf() : 서식 지정자를 이용한 출력 메서드(파이썬 format 메서드와 유사)
		System.out.printf("서식 지정자를 이용한 출력문 : %s\n", "hello");
		// s로 다른 타입의 데이터들도 삽입 가능
		System.out.printf("서식 지정자를 이용한 출력문 : %s\n", 2000);
		
		// String 클래스의 format매서드
		String str2 = String.format("서식 지정자를 이용한 문자열 생성 : %s", "String Data");
		System.out.println(str2);
		
	}
}
